<% if !current_user %>
  <%= link_to("注册", new_user_registration_path, class:"btn btn-lg btn-primary") %>
  <%= link_to("登陆", new_user_session_path, class:"btn btn-lg btn-default") %>

<% else %>
    <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">

              <%= render_user_avatar_from_upload(current_user, :tiny) %>
                  <% if !current_user.username == false %>
                  Hi!, <%= current_user.username  %>
                  <% else %>
                  Hi!, <%= current_user.email %>
                  <% end %>
            <b class="caret"></b>
          </a>
          <ul class="dropdown-menu" style="background-color: black; color: #FFFFFF;">

            <% if current_user.admin? %>
                <li><%= link_to("管理员控制台", admin_courses_path) %> </li>
            <% end %>

            <li> <%= link_to("我的课程", account_courses_path) %> </li>
            <li> <%= link_to("我的订单", account_orders_path ) %> </li>
            <li> <%= link_to("个人设置", account_settings_path) %> </li>

            <li class="divider"></li>
            <li><%= link_to("登出", destroy_user_session_path, method: :delete) %></li>
          </ul>
        </li>
  <% end %>
