<h1>我的课程</h1>


<table class="table table-bordered">
    <thead>
        <tr>
            <td>#</td>
            <td>课程</td>
            <td>任务</td>
            <td>教师</td>
            <td>选项</td>
            <td>创建日期</td>
        </tr>
    </thead>
    <tbody>
        <% @courses.each do |course| %>
        <tr>
            <td><%= course.id %></td>
            <td>
                <%= link_to(course.title, account_course_chapters_path(course)) %>
            </td>
            <td>
                <%= render_my_course_task_status(course) %>
                <%= render_progress(percent = number_with_precision(current_user.works.where(course_id: course.id).count.to_f / course.tasks.count * 100, :precision => 2))  %>
            </td>
            <td>
                <%= course.teacher_name %>
            </td>
            <td>
                <%= link_to("退出课程", "#", class: "btn btn-xs btn-primary") %>
            </td>
            <td>
                <%= render_formatted_time(course.created_at) %>
            </td>

        </tr>
        <% end %>
    </tbody>
</table>
