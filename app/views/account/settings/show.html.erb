<div class="container">
      <div class="row">
      <div class="col-md-5  toppad  pull-right col-md-offset-3 ">
<p class=" text-info"><%= Time.now.strftime("%Y-%m-%d %I:%M:%S") %></p>
      </div>
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xs-offset-0 col-sm-offset-0 col-md-offset-3 col-lg-offset-3 toppad" >


          <div class="panel panel-info">
            <div class="panel-heading">
              <h3 class="panel-title">Settings</h3>
            </div>
            <div class="panel-body">
              <div class="row">
                <div class="col-md-3 col-lg-3 " align="center">
                  <img src="<%= @setting.avatar.thumb%>" width="90" height="90">
                </div>

                <div class=" col-md-9 col-lg-9 ">
                  <table class="table table-user-information">
                    <tbody>
                      <tr>
                        <td>Username</td>
                        <td><%= @setting.username %></td>
                      </tr>
                      <tr>
                        <td>Email</td>
                        <td><%= @setting.email%></td>
                      </tr>
                      <tr>
                        <td>Hobbies</td>
                        <td><%= @setting.hobbies %></td>
                      </tr>
                      <tr>
                        <td>Birthday</td>
                        <td><%= @setting.birthday %></td>
                      </tr>
                      <tr>
                        <td>About Me</td>
                        <td><%= @setting.selfintroduction %></td>
                      </tr>
                      <tr>
                        <td>Location</td>
                        <td><%= @setting.address %></td>
                      </tr>
                         <tr>
                             <tr>
                        <td>Gender</td>
                        <td><%= gender_type %></td>
                      </tr>

                    </tbody>
                  </table>
                  <%= link_to("Edit profile", edit_account_setting_path(current_user), class: "btn btn-info") %>
                  <%= link_to("Change Password", edit_user_registration_path, class: "btn btn-info") %>
                </div>
              </div>
            </div>

          </div>
        </div>
      </div>
    </div>
