<%= simple_form_for [:account, @course, @question] do |f| %>
  <div class="form-group">
    <%= f.input :title, input_html: {class: "form-control"} %>
    <%= f.input :description, input_html: {class: "form-control"} %>
  </div>
  <%= f.submit "Submit", class: "btn btn-default", data: {disable_with: "Sumbitting..."} %>
<% end %>
