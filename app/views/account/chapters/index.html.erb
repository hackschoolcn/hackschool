<h2><%= @course.title %></h2>
 
<% @chapters.each do |chapter| %>
 <div class="panel panel-default">
   <!-- Default panel contents -->
       <div class="panel-heading"><%= chapter.chapter %></div>
       <!-- List group -->
       <ul class="list-group">
         <% chapter.posts.where(is_hidden: false).each do |post| %>
         <li class="list-group-item"><%= link_to(post.title, account_chapter_post_path(chapter, post)) %></li>
         <% end %>
       </ul>
 </div>
<% end %>