<div class="container">
    <div class="row">
     <div class="col-md-12 ">

        <div class="panel-body">
            <table class="table table-striped table-bordered table-list">
              <thead>
                <tr>
                    <th>订单编号</th>
                    <th>课程</th>
                    <th>单价</th>
                    <th>交易状态</th>                  
                    <th>交易详情</th>
                    <th>订单创建时间</th>
                </tr>
              </thead>              
        </div>
    

    <% @orders.each do |order| %>
    
    <tr>
        <td><%= order.token %></td>
        <td><%= link_to(order.course.title, account_course_chapters_path(order.course)) %></td>
        <td>¥ <%= order.price %></td>
        <td>
        <% if order.paid? %>
                  已支付
              <% else %>
                  未支付
              <% end %>     
              </td>
             
               <%= render_order_payment_part_in_user_panel(order) %>
               <td><%= render_formatted_time(order.created_at) %></td>
           </tr>

         </tbody>
        <% end %>
      </table>
    </div>
   </div>
  </div>
