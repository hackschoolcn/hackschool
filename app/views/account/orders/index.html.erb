<h1>我的订单</h1>
<table class="table table-boldered">
    <tr>
        <th>
            #
        </th>
        <th>
            订单内容
        </th>
        <th>
            商品总价
        </th>
        <th>
            订单状态
        </th>
        <th>
            操作
        </th>
        <th>
            订单创建时间
        </th>
    </tr>
    <% @orders.each do |order| %>
    <tr>
        <td>
            <%= order.id %>
        </td>
        <td>
            <%= render_order_description(order) %>
        </td>
        <td>
            <%= order.price %>
            RMB
        </td>
        <td>
            <%= order.aasm_state %>
        </td>

        <%= render_order_payment_part_in_user_panel(order) %>

        <td>
            <%= render_formatted_time(order.created_at) %>
        </td>
    </tr>
    <% end %>
</table>
