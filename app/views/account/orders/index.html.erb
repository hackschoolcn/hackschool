<div class="container">
  <div class="row">
    <div class="col-md-10 ">
        <table class="table table-striped table-bordered table-list">
          <thead>
            <tr>
              <th>订单编号</th>
                <th>课程</th>
                <th>单价</th>
                <th>交易状态</th>
                <th>订单类型</th>
                <th>订单状态</th>
                <th>订单创建时间</th>
            </tr>
          </thead>
      <% @orders.each do |order| %>
          <tbody>
            <tr>
              <td> <%= order.token[0..12] %> </td>
              <td> <%= order.course.title %></td>
              <td> ¥ <%= order.price %> </td>
              <td>
                <% if order.paid? %>
                    已支付
                <% else %>
                    未支付
                <% end %>
              </td>
              <td> <% if order.order_type == "subscription" %>
                      年费
                    <% else %>
                      单次购买
                    <% end %>
               </td>
               <%= render_order_payment_part_in_user_panel(order) %>
               <td><%= render_formatted_time(order.created_at) %></td>
           </tr>

         </tbody>
        <% end %>
      </table>
    </div>
   </div>
  </div>
