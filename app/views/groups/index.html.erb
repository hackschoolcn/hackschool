<div class="col-md-12">
  <div class="group">
    <%= link_to("New group", new_group_path, class: "btn btn-primary pull-right") %>
  </div>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>#</th>
        <th>Title</th>
        <th>Description</th>
      </tr>
    </thead>
    <tbody>
      <% @groups.each do |group| %>
        <tr>
          <td>#</td>
          <td><%= link_to(group.title, group_path(group)) %></td>
          <td><%= group.description %></td>
          <td>
            <%= link_to("Edit", edit_group_path(group), class: "btn btn-sm btn-default") %>
            <%= link_to("Delete", group_path(group), class: "btn btn-sm btn-default", method: :delete, data: {confirm: "你确认要删除此讨论组吗?"}) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
