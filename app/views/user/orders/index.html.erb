<table class="table table-boldered">
  <tr>
    <th>
      订单收件人
    </th>
    <th>
      商品总价
    </th>
    <th>
      订单状态
    </th>
    <th>
      操作
    </th>
    <th>
      订单创建时间
    </th>
  </tr>
  <% @orders.each do |order| %>
      <tr>
        <td>
          <%= order.user.email %>
        </td>
        <td>
          <%= order.amount %> RMB
        </td>
        <td>
          <%= order.aasm_state %>
        </td>

          <%= render_order_payment_part_in_user_panel(order) %>

        <td>
          <%= render_formatted_time(order.created_at) %>
        </td>
      </tr>
  <% end %>
</table>