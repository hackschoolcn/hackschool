
<div class="container-fluid clearfix">
<!--读取图片并赋予背景-->
  <div class="topAd" style='background:url("<%= @course.image.medium %>")'>
    <div class="courseTitleBg">
      <h1 class="courseTitle"><%= @course.title%><h1>
    </div>
  <h4 class="coursePrice">$ <%= @course.price %></h4>
  <% if current_user && current_user.member_expire_date && current_user.member_expire_date > Time.now && current_user.enrolled_courses.include?(@course) %>
    <%= link_to("立刻学习", account_course_chapters_path(@course), class:"btn btn-lg btn-success pull-center")%>
  <% else  %>
    <%= link_to("火速报名", enroll_course_account_course_path(@course), method: :post, class:"btn btn-lg btn-danger pull-center")%>
  <% end %>
  </div>
  <div class="col-md-12">
    <div class="container-fluid center marginTB30">

      <%= render_markdown_text(@course.description) %>
    </div>
  </div>
</div>
