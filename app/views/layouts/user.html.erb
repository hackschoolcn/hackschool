<!DOCTYPE html>
<html>
    <head>
        <title>HackSchool</title>
        <%= csrf_meta_tags %>

        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= stylesheet_link_tag    'simplemde.min' %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
        <%= javascript_include_tag 'simplemde.min' %>
    </head>

    <body>

        <div class="container-fluid">
            <%= render "common/navbar" %>
            <%= render "common/flashes" %>
            <div class="row">
              <div class="col-md-2">

                <ul class="nav nav-pills nav-stacked" style="max-width: 300px; padding-top:20px;">
                    <li ><%= link_to("My Courses", account_courses_path, class: "btn btn-primary") %> </li>
                    <li ><%= link_to("My Orders", account_orders_path, class: "btn btn-primary") %> </li>
                </ul>

              </div>

              <div class="col-md-10">
                <%= yield %>
              </div>
        </div>

        <%= render "common/footer" %>

    </body>
</html>
